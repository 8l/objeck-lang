ARGS=-O3 -Wall -pthread @MEM@ -D_UTILS -Wno-unused-function

CC=g++
SRC=../compiler/types.o ../compiler/linker.o ../vm/loader.o symbols.o
COMPILER_PATH=..
EXE=obu

all: $(EXE)

$(EXE): $(SRC) 
	$(CC) @CPU@ -pthread -o $(EXE) $(SRC) $(OBJ_LIBS)

%.o: %.cpp
	$(CC) @CPU@ $(ARGS) -c $< 

install:
	cp $(EXE) @MY_BIN@

clean:
	rm -f $(EXE).exe $(EXE) *.exe *.o *~
	rm -f @MY_BIN@/$(EXE)
