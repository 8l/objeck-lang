ARGS=-O3 -Wall -pthread @MEM@ @OS@ -Wno-unused-function

CC=g++
SRC=common.o interpreter.o loader.o vm.o posix_main.o 
OBJ_LIBS=@JIT_LIB@ memory.a
MEM_PATH=os/posix
JIT_PATH=@JIT_DIR@
EXE= obr

all: $(EXE)

$(EXE): $(SRC) $(OBJ_LIBS)
	$(CC) @CPU@ -pthread -o $(EXE) $(SRC) $(OBJ_LIBS) -lssl -lcrypto -ldl

memory.a:
	cd $(MEM_PATH); make	
	
@JIT_LIB@:
	cd $(JIT_PATH); make	
	
%.o: %.cpp
	$(CC) @CPU@ $(ARGS) -c $< 

install:
	cp $(EXE) @MY_BIN@

clean:
	cd $(MEM_PATH); make clean
	cd $(JIT_PATH); make clean
	rm -f $(EXE).exe $(EXE) *.exe *.o *~
	rm -f @MY_BIN@/$(EXE)

