###############
# For OSX only
###############
# ARGS=-mstackrealign -O3
# ARGS=-D_TIMING -mstackrealign -O3
ARGS=-mstackrealign -g -D_DEBUG -Wunused

###############
# For Linux
###############
# ARGS=-g -D_DEBUG  -Wunused
# ARGS=-g -Wunused
# ARGS=-O3

CC=g++
AR=ar
SRC= tree.o scanner.o parser.o debugger.o
LIB= ../debugger.a

$(LIB): $(SRC)
	$(AR) -cvq $(LIB) $(SRC)

%.o: %.cpp
	$(CC) -m32 $(ARGS) -c $< 

clean:
	rm -f *.o *~ $(LIB)
