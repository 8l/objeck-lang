ARGS=-pthread -g -Wall -Wno-deprecated-declarations @OS@ @MEM@ -D_DEBUGGER

CC=g++
SRC=common.o interpreter.o loader.o vm.o posix_main.o 
OBJ_LIBS=@JIT_LIB@ memory.a
MEM_PATH=os/posix
JIT_PATH=@JIT_DIR@
LIB=debugger/compiler.a

$(LIB): $(SRC) $(OBJ_LIBS)
	$(AR) -cvq $(LIB) $(SRC)

memory.a:
	cd $(MEM_PATH); make	
	
@JIT_LIB@:
	cd $(JIT_PATH); make	
	
%.o: %.cpp
	$(CC) @CPU@ $(ARGS) -c $< 

clean:
	cd $(MEM_PATH); make clean
	cd $(JIT_PATH); make clean
	rm -f $(LIB).exe $(LIB) *.exe *.o *~
