# ARGS=-g -Wall -Wno-deprecated-declarations -pthread -D_X64 -D_OSX -D_JIT_SERIAL -D_DEBUG 
# ARGS=-g -Wall -Wno-deprecated-declarations -pthread -D_X64 -D_OSX -D_JIT_SERIAL -D_DTIMING 
ARGS=-O3 -Wall -Wno-deprecated-declarations -pthread -D_X64 -D_OSX -D_JIT_SERIAL

CC=g++
SRC=common.o interpreter.o loader.o vm.o posix_main.o 
OBJ_LIBS= jit_amd_lp64.a memory.a
MEM_PATH= os/posix
JIT_PATH= jit/amd64
EXE= obr

$(EXE): $(SRC) $(OBJ_LIBS)
	$(CC) -m64 -pthread -o $(EXE) $(SRC) $(OBJ_LIBS) -ldl -lssl -lcrypto

memory.a:
	cd $(MEM_PATH); make	
	
jit_amd_lp64.a:
	cd $(JIT_PATH); make	
	
%.o: %.cpp
	$(CC) -m64 $(ARGS) -c $< 

clean:
	cd $(MEM_PATH); make clean
	cd $(JIT_PATH); make clean
	rm -f $(EXE).exe $(EXE) *.exe *.o *~
