CC=g++
ARGS=-O3 -Wall -Wno-unused-function
SRC=types.o tree.o scanner.o parser.o linker.o context.o intermediate.o optimization.o target.o compiler.o posix_main.o
EXE=obc

all: $(EXE)

$(EXE): $(SRC)
	$(CC) @CPU@ -o $(EXE) $(SRC)

%.o: %.cpp
	$(CC) @CPU@ $(ARGS) -c $< 

install:
	cp $(EXE) @MY_BIN@
	cp *.obl @MY_DATA@

clean:
	rm -f $(EXE) *.o *~
	rm -f @MY_BIN@/$(EXE)
	rm -f @MY_DATA@/*.obl
