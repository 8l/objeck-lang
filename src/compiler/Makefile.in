CC=g++
ARGS=-O3 -Wall -Wno-unused-function -D_OBJECK_LIB_PATH=\"@MY_DATA@\"
SRC=types.o tree.o scanner.o parser.o linker.o context.o intermediate.o optimization.o target.o compiler.o posix_main.o
EXE=obc

all: $(EXE)

$(EXE): $(SRC)
	$(CC) @CPU@ -o $(EXE) $(SRC)

%.o: %.cpp
	$(CC) @CPU@ $(ARGS) -c $< 

install:
	cp $(EXE) @MY_BIN@
	mkdir @MY_DATA@
	cp lang.obl @MY_DATA@
	cp collect.obl @MY_DATA@
	cp regex.obl @MY_DATA@
	mkdir -p @MY_DOC@
	cp ../../docs/readme.htm @MY_DOC@
	cp ../../README @MY_DOC@
	cp ../../ChangeLog @MY_DOC@
	cp ../../LICENSE @MY_DOC@
	cp ../../AUTHORS @MY_DOC@

clean:
	rm -f $(EXE) *.o *~
	rm -f @MY_BIN@/$(EXE)
	rm -rf @MY_DATA@
