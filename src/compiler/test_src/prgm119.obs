			res->AddBody("}");
			res->AddBody("xmlhttp.onreadystatechange = function(){");
			res->AddBody("if(ajaxRequest.readyState == 4){");
			res->AddBody("document.getElementById(\"myData\").innerHTML=xmlhttp.responseText;");
			res->AddBody("}");
			res->AddBody("}");
			res->AddBody("xmlhttp.open(\"GET\",\"c?cmd=ajax\",true);");
			res->AddBody("xmlhttp.send();");
			res->AddBody("}");
			res->AddBody("</script>");
			res->AddBody("</head>");
			res->AddBody("<body>");
