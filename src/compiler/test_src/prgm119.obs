			res->AddBody("<div id=\"myData\"></div>");
			res->AddBody("<!-- Our response will be placed into the div above,");
			res->AddBody("    thanks to JavaScript's \"innerHTML\" property. -->");
			res->AddBody("</body>");
			res->AddBody("</html>");
		};
		
#~
		res->AddBody("<html>");
