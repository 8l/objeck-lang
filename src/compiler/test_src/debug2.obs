use System.IO;
use System.IO.File;
use XML;

bundle Default {
	class Test {
		function : Main(args : String[]) ~ Nil {
			if(args->Size() = 1) {
				parser := XmlParser->New(FileReader->ReadFile(args[0]));
				if(parser->Parse()) {
					results := parser->FindElements("/table/tr/td");
					if(results <> Nil) {
						results->Size()->PrintLine();
						each(i : results) {					
							element := results->Get(i)->As(XmlElement);
							c:= element->GetContent();
							ns := element->GetNamespace();
							"content={$c}, namespace={$ns}"->PrintLine();
						};
					};
				}
				else {
					parser->GetError()->PrintLine();
				};
			};
		}
	}
}

