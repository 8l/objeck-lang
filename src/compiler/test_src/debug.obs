class Hello {
	function : native : ToString(f : Float) ~ String {
"-0-"->PrintLine();
			str := String->New();
			if(f < 0.0) {
				str->Append('-');
				f *= -1.0;
			};
		
			zero := 0;
			remainder := f - f->Floor();
remainder->PrintLine();
			if(remainder <> 0.0) {
				while(remainder < 0.099) {
	"-1-"->PrintLine();
					f *= 10.0;
					remainder := f - f->Floor();
					zero += 1;
				};
			};

			Number->IntToString(f->Floor()->As(Int), str);
			str->Append('.');
			for(i := 0; i < zero; i+=1;) {
				str->Append('0');
			};
			Number->IntToString((1001.0 * remainder)->As(Int), str);

			return str;
		}

	function : Main(args : String[]) ~ Nil {
		v0 := 10.0;
		tmp := ToString(v0);

#~
		tmp := "";
		tmp->Append(v0);
		tmp->Append(" Hello");
~#

		tmp->PrintLine();
	}
}

