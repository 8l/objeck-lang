bundle RegEx {
	class PostFix {
		@input : String;
		
		New(input : String) {
input->PrintLine();		
			@input := input;
			RegEx2Postfix(@input)->PrintLine();
		}
		
		method : public : RegEx2Postfix(input : String) ~ String {
			output := "";
			parens := IntStack->New();
			alt_count := 0;
			atom_count := 0;
			
			each(i : input) {
				char := input->Get(i);
				select(char){
					label '(': {
						if(atom_count > 1) {
							atom_count -= 1;
							output->Append('.');
						};
						
						parens->Push(alt_count);
						parens->Push(atom_count);
						
						alt_count := 0;
						atom_count := 0;
					}
					
					label '|': {
						if(atom_count = 0) {
							return Nil;
						};
							
						atom_count -= 1;
						while(atom_count > 0) {
							output->Append('.');
							atom_count -= 1;
						};
						
						alt_count += 1;
					}
						
					label ')': {
						if(parens->Size() = 0) {
							return Nil;
						};
						
						if(atom_count = 0) {
							return Nil;
						};
						
						atom_count -= 1;
						while(atom_count > 0) {
							output->Append('.');
							atom_count -= 1;
						};
						
						while(alt_count > 0) {
							output->Append('|');
							alt_count -= 1;
						};
						
						atom_count := parens->Pop();
						alt_count := parens->Pop();
						
						atom_count += 1;
					}
					
					label '*':
					label '+':
					label '?': {
						if(atom_count = 0) {
							return Nil;
						};
						
						output->Append(char);
					}
					
					other: {
						if(atom_count > 1) {
							atom_count -= 1;
							output->Append('.');
						};
						
						output->Append(char);
						atom_count += 1;
					}
				};
			};
			
			if(parens->Size() <> 0) {
				return Nil;
			};
			
			atom_count -= 1;
			while(atom_count > 0) {
				output->Append('.');
				atom_count -= 1;
			};
			
			while(alt_count > 0) {
				output->Append('|');
				alt_count -= 1;
			};
			
			return output;
		}

		function : Main(args : String[]) ~ Nil {
			postfix := PostFix->New(args[0]);
		}
	}
}

