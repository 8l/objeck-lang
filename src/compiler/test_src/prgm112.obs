use IO;

bundle Default {
	enum TokenType := -32 {
		ZERO_MORE,
		ONE_MORE,
		SEQUENCE,
		ALTERNATION,
		OPRN,
		CPRN,
		STOP
	}
	
	class Token {
		@type : Int;
		@values : String;
		
		New(type : Int) {
			@type := type;
			@values := Nil;
		}
		
		New(type : Int, values : String) {
			@type := type;
			@values := values;
		}
		
		method : public : GetType() ~ Int {
			return @type;
		}
		
		method : public : GetValues() ~ String {
			return @values;
		}
	}
	
	enum InstrType := -64 {
		ZERO_MORE,
		ONE_MORE,
		ALTERNATION,
		MATCH,
		JUMP,
		STOP
	}
	
	class Instr {
		@type : InstrType;
		@value : Int;
		@values : String;
		
		New(type : InstrType) {
			@type := type;
			@values := Nil;
		}
		
		New(type : InstrType, value : Int) {
			@type := type;
			@value := value;
		}
		
		New(type : InstrType, values : String) {
			@type := type;
			@values := values;
		}
		
		method : public : GetType() ~ InstrType {
			return @type;
		}
		
		method : public : GetValue() ~ Int {
			return @value;
		}
		
		method : public : GetValues() ~ String {
			return @values;
		}
	}
	
	class Postfix {
		@input : String;
		@index : Int;
		@char : Char;
		@input_stack : Token[];
		@input_index : Int;
		@error : String;

		New(input : String) {
			@input := input;
			@index := 0;
			@input_stack := Token->New[256];
			@input_index := 0;
		}

		method : Push(value : Int) ~ Nil {
			@input_stack[@input_index] := Token->New(value);
			@input_index += 1;
		}

		method : Next() ~ Nil {
			if(@index < @input->Size()) {
				@char := @input->Get(@index);
				@index += 1;
			}
			else {
				@char := '\0';
			};
		}
		
		method : IsNext(c : Char) ~ Bool {
			if(@index < @input->Size()) {

b := @input->Get(@index);
b->PrintLine();
c->PrintLine();

				x := c->As(Int) = b;
x->PrintLine();
				return x;
			};
			
			return true;
		}

		method : public : Compile() ~ String {
			Parse();
DumpInput();			
			if(@error = Nil) {
				output := Emit();
				if(@error = Nil) {
DumpOutput(output);				
				};

if(@error <> Nil) {				
	@error->PrintLine();
};
			};
			
			return "";
		}
		
		method : Emit() ~ Instr[] {
			output := Instr->New[256];
			output_index := 1;
			
			calc_stack := Int->New[256];
			calc_index := 0;
			i := 0;
			c := @input_stack[0];
			
			start := -1;
			
			while(c <> Nil) {
				select(c->GetType()) {
					label TokenType->ZERO_MORE: {
# Console->Print(output_index)->PrintLine(": ZERO_MORE");
						output[output_index] := Instr->New(InstrType->ZERO_MORE);
						output_index += 1;
						
						top := calc_stack[calc_index - 1];
						if(top >= 40 & top <= 122) {
							calc_index -= 1;
							match := calc_stack[calc_index];
							
# Console->Print(output_index)->Print(": MATCH id='")->Print(match)->PrintLine("'");
							output[output_index] := Instr->New(InstrType->MATCH, match);
							output_index += 1;
							
# Console->Print(output_index)->Print(": JUMP id=")->PrintLine(output_index - 2);
							output[output_index] := Instr->New(InstrType->JUMP, output_index - 2);
							output_index += 1;	
						}
						else {
							calc_index -= 1;
							match := calc_stack[calc_index];
							if(match = TokenType->CPRN->As(Int)) {
								calc_index -= 2;
								match := calc_stack[calc_index];
								if(match = TokenType->OPRN->As(Int)) {
									calc_index -= 1;
									match := calc_stack[calc_index];
								};
# Console->Print(output_index)->Print(": JUMP id=")->PrintLine(match);
								output[output_index] := Instr->New(InstrType->JUMP, match);
								output_index += 1;
							}
							else {
								@error := "Invalid expression";
							};
						};
						
						calc_stack[calc_index] := c->GetType();
						calc_index += 1;
					}

					label TokenType->ONE_MORE: {
					}

					label TokenType->SEQUENCE: {
						top := calc_stack[calc_index - 1];
						if(top >= 40 & top <= 122) {
							calc_index -= 1;
							match := calc_stack[calc_index];
							
Console->Print(output_index)->Print(": MATCH id='")->Print(match)->PrintLine("'");
							output[output_index] := Instr->New(InstrType->MATCH, match);
							output_index += 1;
						};
										
Console->Print(output_index)->Print(": JUMP id=")->PrintLine(output_index + 1);
						output[output_index] := Instr->New(InstrType->JUMP, output_index + 1);
						output_index += 1;
					}

					label TokenType->ALTERNATION: {
Console->Print(output_index)->PrintLine(": ALTERNATION");
						output[output_index] := Instr->New(InstrType->ALTERNATION);
						output_index += 1;
						
						
						
						
						
						
						
						
						
						
						
						
						
						
						
						top := calc_stack[calc_index - 1];
						if(top >= 40 & top <= 122) {
							calc_index -= 1;
							match := calc_stack[calc_index];
							
# Console->Print(output_index)->Print(": MATCH id='")->Print(match)->PrintLine("'");
							output[output_index] := Instr->New(InstrType->MATCH, match);
							output_index += 1;
							
# Console->Print(output_index)->Print(": JUMP id=")->PrintLine(output_index - 2);
							output[output_index] := Instr->New(InstrType->JUMP, output_index - 2);
							output_index += 1;	
						}
						else {
							calc_index -= 1;
							match := calc_stack[calc_index];
							if(match = TokenType->CPRN->As(Int)) {
								calc_index -= 2;
								match := calc_stack[calc_index];
								if(match = TokenType->OPRN->As(Int)) {
									calc_index -= 1;
									match := calc_stack[calc_index];
								};
# Console->Print(output_index)->Print(": JUMP id=")->PrintLine(match);
								output[output_index] := Instr->New(InstrType->JUMP, match);
								output_index += 1;
							}
							else {
								@error := "Invalid expression";
							};
						};
						
						
						
						
						
						
						
						
						
						
						
						
					}
					
					label TokenType->OPRN: {
						calc_stack[calc_index] := output_index;
						calc_index += 1;
						
						start := calc_index;
						
						calc_stack[calc_index] := c->GetType();
						calc_index += 1;
					}
					
					label TokenType->CPRN: {
						calc_stack[calc_index] := c->GetType();
						calc_index += 1;
					}
					
					label TokenType->STOP: {
						calc_index -= 1;
						match := calc_stack[calc_index];	
						if(match = TokenType->CPRN->As(Int)) {
							calc_index -= 2;
							match := calc_stack[calc_index];
							if(match = TokenType->OPRN->As(Int)) {
								calc_index -= 1;
							};		
						};
						
# Console->Print(output_index)->PrintLine(": STOP");
						output[output_index] := Instr->New(InstrType->STOP);
					}
				
					other: {					
						calc_stack[calc_index] := c->GetType();
						calc_index += 1;
					}
				};
				# update
				i += 1;
				c := @input_stack[i];	 
			};
			
			if(start > -1) {
# Console->Print(0)->Print(": JUMP id=")->PrintLine(start);
				output[0] := Instr->New(InstrType->JUMP, start);
			}
			else {
# Console->Print(0)->Print(": JUMP id=")->PrintLine(1);			
				output[0] := Instr->New(InstrType->JUMP, 1);
			};
			
# Console->Print("calc: id=")->PrintLine(calc_index);

			return output;
		}
		
		# TODO: validate input
		method : Parse() ~ Nil {
			Next();
			Alternation();
			Push(TokenType->STOP->As(Int));
		}	

		method : Alternation() ~ Nil {
			Sequence();

			if(@char = '|') {
				Next();
				Sequence();
				Push(TokenType->ALTERNATION->As(Int));
			};
		}

		method : Sequence() ~ Nil {
			while(@char >= 40 & @char <= 122 & @char <> ')') {
				if(Repetition()) {
					Push(TokenType->SEQUENCE->As(Int));
				};
			};
		}
		
		method : Repetition() ~ Bool {
			was_pushed := false;
	
			if(@char = '(') {
				Push(TokenType->OPRN->As(Int));
				Next();
				Alternation();
				if(@char <> ')') {
					@error := "expected ')'";
					return false;
				};
				Push(TokenType->CPRN->As(Int));
				Next();
			}
			else if(@char <> ')') {
				Push(@char->As(Int));
				Next();
@char->PrintLine();
IsNext('|')->PrintLine();
"---"->PrintLine();
				if(IsNext('|') = false) {
					was_pushed := true;
				};
				
			};
			
			if(@char = '*') {
				Push(TokenType->ZERO_MORE->As(Int));
				was_pushed := true;
				Next();
			}
			else if(@char = '+') {
				Push(TokenType->ONE_MORE->As(Int));
				was_pushed := true;
				Next();
			};
			
			return was_pushed;
		}
		
		function : DumpOutput(instrs : Instr[]) ~ Nil {
			i := 0;
			c := instrs[0];	 

			while(c <> Nil) {
				select(c->GetType()) {
					label InstrType->ZERO_MORE: {
						Console->Print(i)->PrintLine(": ZERO_MORE");
					}
					
					label InstrType->ONE_MORE: {
						Console->Print(i)->PrintLine(": ONE_MORE");
					}
					
					label InstrType->ALTERNATION: {
						Console->Print(i)->PrintLine(": ALTERNATION");
					}
					
					label InstrType->MATCH: {
						Console->Print(i)->Print(": MATCH char='")
							->Print(c->GetValue()->As(Char))->PrintLine("'");
					}
					
					label InstrType->JUMP: {
						Console->Print(i)->Print(": JUMP pos=")->PrintLine(c->GetValue());
					}
					
					label InstrType->STOP: {
						Console->Print(i)->PrintLine(": STOP");
					}
				};
				i += 1;
				c := instrs[i];	 
			};
			"-----"->PrintLine();
		}		
		
		method : DumpInput() ~ Nil {
			i := 0;
			c := @input_stack[0];	 

			while(c <> Nil) {
				select(c->GetType()) {
					label TokenType->ZERO_MORE: {
						'*'->PrintLine();
					}

					label TokenType->ONE_MORE: {
						'+'->PrintLine();
					}

					label TokenType->SEQUENCE: {
						'.'->PrintLine();
					}

					label TokenType->ALTERNATION: {
						'|'->PrintLine();
					}
					
					label TokenType->OPRN: {
						'('->PrintLine();
					}
					
					label TokenType->CPRN: {
						')'->PrintLine();
					}
					
					label TokenType->STOP: {
						"STOP"->PrintLine();
					}
				
					other: {
						v := c->GetType()->As(Char);
						v->PrintLine();
					}
				};
				i += 1;
				c := @input_stack[i];	 
			};
			"-----"->PrintLine();
		}

		function : Main(args : String[]) ~ Nil {
			if(args->Size() = 1) {
				p := Postfix->New(args[0]);
				p->Compile();
			};
		}
	}
}
