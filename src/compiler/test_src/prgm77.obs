use IO;
use XML;
use Structure;

bundle Default {
	class Test {
		function : Main(args : String[]) ~ Nil {
			if(args->Size() = 1) {
				parser := XmlParser->New(FileReader->ReadFile(args[0]));
				if(parser->Parse()) {
#					parser->ToString()->PrintLine();					
					results := parser->FindElements("//nutrition/food/serving[grams]");
					each(i : results) {					
						element := results->Get(i)->As(XMLElement);
						element->GetContent()->PrintLine();
					};
				}
				else {
					parser->GetError()->PrintLine();
				};
			};
		}
	}
}

