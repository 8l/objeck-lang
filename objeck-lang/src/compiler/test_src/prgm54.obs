use Net;

bundle Default {
	class Hello {
		function : Main(args : System.String[]), Nil {
			socket := IPSocket->New("www.cu.edu", 80);
			if(socket->IsOpen()) {
				socket->WriteString("GET / HTTP/1.1\r\nHost: www.cu.edu\r\n\r\n");
				do {
					line := socket->ReadString();
					line->PrintLine();
				}
				while(line->GetSize() > 0);
				socket->Close();
			}
			else {
				"unable to open"->PrintLine();
			};
		}
	}
}
