##############
# For OSX only
##############
# ARGS=--pthread mstackrealign -O3
# ARGS=-pthread -D_TIMING -mstackrealign -O3
# ARGS=-pthread -mstackrealign -g -D_DEBUG -Wunused

##############
# For Linux
##############
ARGS=-g -D_DEBUG -D_SERIAL -Wunused -pthread
# ARGS=-O3 -pthread

CC=g++
SRC=interpreter.o loader.o vm.o 
OBJ_LIBS= jit_intel_lp32.a memory.a
MEM_PATH= os/posix
JIT_PATH= jit/ia32
EXE= obr

$(EXE): $(SRC) $(OBJ_LIBS)
	$(CC) -m32 -pthread -o $(EXE) $(SRC) $(OBJ_LIBS)

memory.a:
	cd $(MEM_PATH); make	
	
jit_intel_lp32.a:
	cd $(JIT_PATH); make	
	
%.o: %.cpp
	$(CC) -m32 $(ARGS) -c $< 

clean:
	cd $(MEM_PATH); make clean
	cd $(JIT_PATH); make clean
	rm -f $(EXE).exe $(EXE) *.exe *.o *~
